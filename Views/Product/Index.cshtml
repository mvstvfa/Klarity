@model List<KlarityMVP.Models.Product>

<div class="container">
    <h2>Shop Klarity Drinks</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card p-3">
                    <h5>@item.Name</h5>
                    <p>@item.Type</p>
                    <p>$@item.Price</p>
                    <button class="btn btn-outline-primary">Add to Cart</button>
                </div>
            </div>
        }
    </div>
</div>
